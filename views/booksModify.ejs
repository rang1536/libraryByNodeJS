                <br/><br/>
				<div class="container">
				  <form class="form-horizontal" role="form" action="/modify/books" method='post'>
				    <fieldset>
              <div class="form-group">
				        <label class="col-sm-3 control-label" for="booksnumber">도서번호</label>
				        <div class="col-sm-7">
				          <input type="text" class="form-control" value="<%=books[0].booksnumber%>" readonly="readonly" name="booksnumber" id="booksnumber" />
				        </div>
				      </div>
			        <div class="form-group">
				        <label class="col-sm-3 control-label" for="booksName">도서명</label>
				        <div class="col-sm-7">
				          <input type="text" class="form-control" value="<%=books[0].booksname%>" name="booksName" id="booksName" placeholder="도서명을 입력하세요">
				        </div>
				      </div>
				      <div class="form-group">
				        <label class="col-sm-3 control-label" for="bookCompany">출판사</label>
				        <div class="col-sm-7">
				          <input type="text" class="form-control" value="<%=books[0].booksmade%>" name="bookCompany" id="bookCompany" placeholder="출판사를 입력하세요">
				        </div>
				      </div>
				      <div class="form-group">
				        <label class="col-sm-3 control-label" for="booksCategory">도서분류</label>
				        <div class="col-sm-7">
				          <div class="row">
				            <div class="col-xs-3">
				              <select class="form-control col-sm-2" name="booksCategory" id="booksCategory">
				                <option>--분류--</option>
                        <% for(var k in booksKinds){%>
				                <option value="<%=booksKinds[k].bookskindnumber%>"><%=booksKinds[k].bookskindname%></option>
                        <%}%>
				              </select>
				            </div>
				           </div>
				          </div>
				        </div>
						<div class="form-group">
							<label class="col-sm-3 control-label" for="booksWriter">저자</label>
							<div class="col-sm-7">
							  <input type="text" class="form-control" value="<%=books[0].booksauthor%>" name="booksWriter" id="booksWriter" placeholder="출판사를 입력하세요"/>
							</div>
						</div>
						<div class="form-group">
							<label class="col-sm-3 control-label" for="firstRentDay">최초대여일</label>
							<div class="col-sm-7">
							  <input type="date" class="form-control" value="<%=books[0].firstRent%>" name="firstRentDay" id="firstRentDay"/>
							</div>
						</div>
						<div class="form-group">
							<label class="col-sm-3 control-label" for="rentCan">대여가능여부</label>
							<div class="col-sm-7">
							  <label class="radio-inline">
							  	<input type="radio"  name="rentCan" value="1"/>대여가능
							  </label>
							  <label class="radio-inline">
							  	<input type="radio"  name="rentCan" value="0"/>대여불가능
							  </label>
							</div>
						</div>
						<div class="form-group">
							<label class="col-sm-3 control-label" for="rentDaily">대여일수</label>
							<div class="col-sm-7">
							  <input type="text" class="form-control" value="<%=books[0].bookslendingpossible%>" name="rentDaily" id="rentDaily" placeholder="총대여일수를 입력하세요"/>
							</div>
						</div>
						<div class="form-group">
							<label class="col-sm-3 control-label" for="rentCount">대여횟수</label>
							<div class="col-sm-7">
							  <input type="text" class="form-control" value="<%=books[0].bookslendingcount%>" name="rentCount" id="rentCount" placeholder="총대여횟수를 입력하세요"/>
							</div>
						</div>
						<div class="form-group">
							<label class="col-sm-3 control-label" for="damage">파손여부</label>
							<div class="col-sm-7">
							  <label class="radio-inline">
							  	<input type="radio"  name="booksDamage" value="1"/>파손됨
							  </label>
							  <label class="radio-inline">
							  	<input type="radio"  name="booksDamage" value="0"/>멀쩡함
							  </label>
							</div>
						</div>
						<div class="form-group">
							<label class="col-sm-3 control-label" for="damageDay">파손날짜</label>
							<div class="col-sm-7">
							  <input type="date" class="form-control" name="damageDay" id="damageDay"/>
							</div>
						</div>
						<div class="form-group">
							<label class="col-sm-3 control-label" for="booksCategory">도서분류</label>
					        <div class="col-sm-9">
					          <div class="row">
					        	<div class="col-xs-3">
